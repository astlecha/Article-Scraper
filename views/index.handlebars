<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="modelAriaLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h5 class="modal-title">Add a Comment</h5>
      </div>
      <div class="modal-body">
        <div class="form-group">
		    <label for="userName">Your Name</label>
		    <textarea class="form-control" id="userName" rows="1"></textarea>
		 </div>
		 <div class="form-group">
		    <label for="userComment">What are your thoughts?</label>
		    <textarea class="form-control" id="userComment" rows="3"></textarea>
		 </div>
		<form action="/notes/{{this.id}}?_method=PUT" method="POST">
		 <button type="button" class="btn btn-primary" data-dismiss="modal">Save changes</button>
		</form>
      </div>
    </div>
  </div>
</div>

<div class="container">
	<nav class="navbar navbar-inverse bg-primary" style="padding:10px;">
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
	      <div class="navbar-nav">
	      	<a href="/"><button type="button" class="btn btn-primary" id="home-button">Home</button></a>
		    <a class="btn btn-danger" href="/scrape" id="scrape-button">Scrape New Articles!</a>
	      </div>
	    </div>
	</nav>
	<div class="jumbotron">
		<h1>Mongo Scraper</h1>
		<h2>Scrape Recent Article Headlines!</h2>
	</div>
	<div class="row">
		<div class="col-lg-12" id="allArticles">
			<!-- Scraped Data gets appended here! -->
			{{#each articles}}
				<form action="/" method="GET">
					<div class="panel panel-default" style="padding:20px; background-color:#A9EAFF; text-align:center;">
			          <h3>{{this.title}}</h3>
			          <a href="{{this.link}}"><p>Link to Article</p></a>

			          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Comment</button>

			          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#commentModal">See Comments</button>
			        </div>
		        </form>
			{{/each}}

			<!-- Saved Articles get appended here -->
		</div>
	</div>
</div>